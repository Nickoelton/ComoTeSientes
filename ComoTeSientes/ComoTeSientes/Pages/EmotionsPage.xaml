<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComoTeSientes.Pages.EmotionsPage"  BackgroundColor="DarkBlue" Title="Analiza como te sientes">

    <ScrollView>
        <StackLayout Padding="5" HorizontalOptions="Center">
                <Image x:Name="imgPicture" WidthRequest="150" HeightRequest="150" Aspect="AspectFit"/>
                <Button x:Name="btnCam" x:Id="btnCam" Text="Usar Cámara" Clicked="btnPicture_Clicked" BackgroundColor="White" TextColor="DarkGray"/>
                <Button x:Name="btnGalery" x:Id="btnGalery" Text="Seleccionar de la Galería" Clicked="btnPicture_Clicked" BackgroundColor="White" TextColor="DarkGray"/>
                <Button x:Name="btnAnalysisEmotions" Text="Analizar Emociones" Clicked="btnAnalysisEmotions_Clicked" BackgroundColor="White" TextColor="DarkGray"/>
                <Label x:Name="lblResult" Text="Selecciona una imagen" TextColor="White" Font="16" HorizontalOptions="Center"/>
                <StackLayout x:Name="Results"/>
        </StackLayout>
    </ScrollView>

</ContentPage>